<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlvVehicleRegistrationList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tvRegisterVehicleRegistrationList"
        android:textColor="#0B15C6"
        android:textSize="@dimen/font_size_18"
        android:fontFamily="@font/source_sans_pro"
        android:padding="@dimen/padding_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rlvVehicleRegistrationList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng ký thêm xe mới"
        />


</androidx.constraintlayout.widget.ConstraintLayout>