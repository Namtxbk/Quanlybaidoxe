<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llFrontRegisterVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_14"
                android:gravity="start"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:gravity="start"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Ảnh giấy đăng ký xe mặt trước"
                        android:textSize="@dimen/font_size_16" />
                    <ImageView
                        android:id="@+id/ivAddFrontRegisterVehicle"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/add_image_icon"
                        />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="@dimen/corner_radius_10"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/margin_14"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/ivFrontRegisterVehicle"
                        android:layout_width="match_parent"
                        android:background="#DBDEE4"
                        android:layout_height="300dp"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBackRegisterVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_14"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:gravity="start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Ảnh giấy đăng ký xe mặt sau"
                        android:textSize="@dimen/font_size_16" />
                    <ImageView
                        android:id="@+id/ivAddBackRegisterVehicle"
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/add_image_icon"
                        />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/margin_14"
                    app:cardCornerRadius="@dimen/corner_radius_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/ivBackRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="#DBDEE4"
                        android:scaleType="fitCenter" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Biển số xe"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:id="@+id/edtLicensePlateRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập biển số xe chỉ bao gồm số và chữ"
                        android:inputType="text"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Số giấy chứng nhận"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/edtCetificateNumberRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập số giấy chứng nhận"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Tên chủ xe"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:inputType="textPersonName"
                        android:id="@+id/edtNameRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập tên của bạn"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Địa chỉ"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/edtAddressRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập địa chỉ của bạn"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Nhãn hiệu"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/edtBrandRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập nhãn hiệu xe như: HONDA"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Số loại"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/edtTypeBrandRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập số loại của xe như: LEAD"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Số máy"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/edtEngineNumberRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập số máy"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Số khung"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/edtChassisNumberRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập số khung"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Màu sơn"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:inputType="text"
                        android:id="@+id/edtColorRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Nhập màu sơn xe của bạn"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Ngày đăng ký"
                        android:textSize="@dimen/font_size_16" />

                    <EditText
                        android:id="@+id/edtRegisterDayRegisterVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edit_text_white"
                        android:fontFamily="@font/source_sans_pro"
                        android:hint="Chọn ngày đăng ký xe"
                        android:inputType="none"
                        android:maxLines="2"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/font_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_14"
                    android:layout_marginBottom="@dimen/margin_14"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:gravity="start|center_vertical"
                        android:text="Ngày hết hạn"
                        android:textSize="@dimen/font_size_16" />

                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edtExprireDayRegisterVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edit_text_white"
                android:fontFamily="@font/source_sans_pro"
                android:hint="Chọn ngày hết hạn"
                android:inputType="none"
                android:maxLines="2"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/font_size_16" />

            <Button
                android:id="@+id/btnConfirmRegisterVehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20"
                android:background="#0C15AA"
                android:text="Gửi yêu cầu đăng ký"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>